<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="Germini" translate="label" sortOrder="10">
            <label>Vexpro</label>
        </tab>
        <section id="acessos" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Germini</label>
            <tab>Germini</tab>
            <resource>Vexpro_GerminiConfig::acessos_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Configurações de Acesso</label>
                <field id="identity_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Identity Url</label>
                    <validate>required-entry</validate>
                    <comment>URL de autenticação da API.</comment>
                </field>

                <field id="identity_login" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Login do parceiro</label>
                    <validate>required-entry</validate>
                    <comment>Login do parceiro</comment>
                </field>
                <field id="identity_password" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Senha do parceiro</label>
                    <validate>required-entry</validate>
                    <comment>Senha do parceiro</comment>
                </field>

                <field id="kernel_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Kernel Url</label>
                    <validate>required-entry</validate>
                    <comment>URL do kernel da API.</comment>
                </field>
                <field id="programCurrencySymbol" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>programCurrencySymbol</label>
                    <comment>Simbolo da moeda do Germini.</comment>

                    <frontend_model>Vexpro\GerminiConfig\Block\System\Config\Form\Field\Symbol</frontend_model>

                </field>
                <field id="programCurrencyName" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>programCurrencyName</label>
                    <comment>Nome da moeda do Germini.</comment>

                    <frontend_model>Vexpro\GerminiConfig\Block\System\Config\Form\Field\Name</frontend_model>

                </field>

                <field id="sap_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>sap_url</label>
                    <validate>required-entry</validate>
                    <comment>URL de integração com o SAP.</comment>
                </field>

                <field id="images_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>images_url</label>
                    <validate>required-entry</validate>
                    <comment>URL de integração de imagens.</comment>
                </field>
                <field id="images_login" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>images_login</label>
                    <validate>required-entry</validate>
                    <comment>Login integração de imagens.</comment>
                </field>
                <field id="images_pwd" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>images_pwd</label>
                    <validate>required-entry</validate>
                    <comment>Senha integração de imagens.</comment>
                </field>
                <field id="cvale_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>cvale_url</label>
                    <validate>required-entry</validate>
                    <comment>Url do programa de fidelidade.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
